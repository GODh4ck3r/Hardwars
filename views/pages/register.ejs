<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Hardwars 2023</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="/css/nice-select.css">
    <!-- JS -->
    <script src="/js/jquery.js" defer></script>
    <script src="/js/jquery.nice-select.min.js" defer></script>
    <script src="/js/register.js" defer></script>
</head>

<body>
    <%- include('../partials/header.ejs')%>
        <section id="mainBody">
            <img src="/images/back1.png" alt="">
            <div id="backlight"></div>
            <div class="form-box removeScrollBar">
                <form id="regForm">
                    <div class="box teamBox">
                        <div class="inputBox">
                            <label for="mentorName">Mentor Name</label>
                            <input type="text" id="mentorName" name="mentorName" required>
                        </div>
                        <div class="inputBox">
                            <label for="teamName">Team Name</label>
                            <input type="text" id="teamName" name="teamName" required>
                        </div>
                        <div class="inputBox">
                            <label>Topic</label>
                            <select id="selectBox" name="topic" class="wide">
                                <option value="Loading">Loading ...</option>
                            </select>
                        </div>
                    </div>
                    <hr>
                    <div id="members">
                        <% for (var i=1; i <=4; i++ ) { %>
                            <div class="box">
                                <h2>Member <%= i %>
                                </h2>
                                <div class="member-box-grid">
                                    <div class="inputBox">
                                        <label for="member-name-<%= i %>">Name</label>
                                        <input type="text" id="member-name-<%= i %>" name="member-name-<%= i %>" required>
                                    </div>
                                    <div class="inputBox">
                                        <label for="college-<%= i %>">College</label>
                                        <input type="text" id="college-<%= i %>" name="college-<%= i %>" required>
                                    </div>
                                    <div class="inputBox">
                                        <label for="city-<%= i %>">City</label>
                                        <input type="text" id="city-<%= i %>" name="city-<%= i %>" required>
                                    </div>
                                    <div class="inputBox">
                                        <label for="mobile-<%= i %>">Mobile Number</label>
                                        <input type="text" id="mobile-<%= i %>" name="mobile-<%= i %>" required>
                                    </div>
                                    <div class="inputBox">
                                        <label for="email-<%= i %>">Email</label>
                                        <input type="email" id="email-<%= i %>" name="email-<%= i %>" required>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>

                    <div style="display: flex;justify-content: flex-end; align-items: center;">
                        <button type="button" id="subBnt">Register</button>
                    </div>
                </form>
            </div>
        </section>

</body>

</html>